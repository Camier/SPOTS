[flake8]
max-line-length = 120
exclude = 
    .git,
    __pycache__,
    venv,
    .venv,
    env,
    .env,
    build,
    dist,
    *.egg-info,
    node_modules,
    migrations,
    .pytest_cache,
    htmlcov

ignore = 
    # E501: line too long (we use 120 chars)
    E501,
    # W503: line break before binary operator (conflicts with black)
    W503,
    # E203: whitespace before ':' (conflicts with black)
    E203,
    # E266: too many leading '#' for block comment
    E266,
    # E402: module level import not at top of file
    E402,
    # F401: imported but unused (for __init__.py files)
    F401

per-file-ignores =
    # Ignore imports in __init__ files
    __init__.py: F401
    # Ignore complexity in scrapers (they're inherently complex)
    */scrapers/*.py: C901