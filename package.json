{
  "name": "spots",
  "version": "2.0.0",
  "description": "Discover outdoor spots with real-time weather integration",
  "type": "module",
  "main": "src/frontend/js/app.js",
  "scripts": {
    "dev": "python -m http.server 8081 --directory src/frontend",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src/frontend/js/**/*.js",
    "format": "prettier --write src/frontend/**/*.{js,css,html}",
    "build": "node scripts/build.js",
    "start": "node scripts/start-server.js"
  },
  "keywords": [
    "toulouse",
    "weather",
    "map",
    "pwa",
    "spots",
    "outdoor"
  ],
  "author": "DevMaster",
  "license": "MIT",
  "dependencies": {
    "leaflet": "^1.9.4",
    "leaflet.markercluster": "^1.5.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@playwright/test": "^1.54.2",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.32.0",
    "jsdom": "^26.1.0",
    "playwright": "^1.54.2",
    "prettier": "^3.3.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
